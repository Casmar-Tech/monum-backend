{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es2020","DOM"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
